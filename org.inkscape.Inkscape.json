{
    "app-id": "org.inkscape.Inkscape",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "inkscape",
    "tags" : [
       "beta"
    ],
    "desktop-file-name-suffix": " (Beta)",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
